{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "foundry-races.json",
	"version": "1.1.0",

	"type": "object",

	"properties": {
		"raceFeature": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"type": "object",
				"properties": {
					"name": {"type": "string"},
					"source": {"type": "string"},

					"raceName": {
						"description": "The full name of the race, with subrace parts/etc. applied.",
						"type": "string"
					},
					"raceSource": {
						"description": "The source of the subrace or race.",
						"type": "string"
					},

					"system": {"$ref": "util.json#/definitions/foundrySystemObject"},

					"flags": {"$ref": "util.json#/definitions/foundryFlagsObject"},

					"effects": {"$ref": "util.json#/definitions/foundryEffectsArray"}
				},
				"required": [
					"name",
					"source",
					"raceName",
					"raceSource"
				],
				"additionalProperties": false
			}
		}
	},

	"required": [
		"raceFeature"
	],
	"additionalProperties": false
}
