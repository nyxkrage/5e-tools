{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "foundry-backgrounds.json",
	"version": "1.1.0",

	"type": "object",

	"properties": {
		"backgroundFeature": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"type": "object",
				"properties": {
					"name": {"type": "string"},
					"source": {"type": "string"},

					"backgroundName": {"type": "string"},
					"backgroundSource": {"type": "string"},

					"system": {"$ref": "util.json#/definitions/foundrySystemObject"},

					"flags": {"$ref": "util.json#/definitions/foundryFlagsObject"},

					"effects": {"$ref": "util.json#/definitions/foundryEffectsArray"}
				},
				"required": [
					"name",
					"source",
					"backgroundName",
					"backgroundSource"
				],
				"additionalProperties": false
			}
		}
	},

	"additionalProperties": false
}
