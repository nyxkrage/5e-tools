{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "foundry-items.json",
	"version": "1.2.0",

	"type": "object",

	"properties": {
		"magicvariant": {"$ref": "util.json#/definitions/foundrySideDataGenericArray"},
		"item": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"type": "object",
				"properties": {
					"name": {"type": "string"},
					"source": {"type": "string"},

					"system": {"$ref": "util.json#/definitions/foundrySystemObject"},

					"flags": {"$ref": "util.json#/definitions/foundryFlagsObject"},

					"effects": {"$ref": "util.json#/definitions/foundryEffectsArray"},

					"type": {
						"type": "string",
						"enum": [
							"weapon",
							"tool",
							"consumable",
							"equipment",
							"container",
							"loot"
						]
					}
				},
				"required": [
					"name",
					"source"
				],
				"additionalProperties": false
			}
		}
	},

	"required": [
		"magicvariant",
		"item"
	],
	"additionalProperties": false
}
