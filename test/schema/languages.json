{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "languages.json",
	"version": "1.1.6",
	"type": "object",
	"definitions": {
		"language": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"source": {
					"type": "string"
				},
				"page": {
					"$ref": "util.json#/definitions/page"
				},
				"srd": {
					"type": "boolean"
				},
				"basicRules": {
					"$ref": "util.json#/definitions/basicRules"
				},
				"typicalSpeakers": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"script": {
					"type": "string"
				},
				"type": {
					"type": "string",
					"enum": [
						"standard",
						"exotic",
						"secret"
					]
				},
				"additionalSources": {
					"$ref": "util.json#/definitions/additionalSources"
				},
				"dialects": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"fonts": {
					"description": "A list of direct URLs to font files.",
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"hasFluff": {
					"type": "boolean"
				},
				"hasFluffImages": {
					"type": "boolean"
				}
			},
			"required": [
				"name",
				"source",
				"page"
			],
			"additionalProperties": false
		}
	},
	"properties": {
		"language": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"$ref": "#/definitions/language"
			}
		},
		"languageScript": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"fonts": {
						"type": "array",
						"items": {
							"type": "string"
						}
					}
				},
				"required": [
					"name",
					"fonts"
				],
				"additionalProperties": false
			}
		}
	},
	"required": [
		"language"
	],
	"additionalProperties": false
}